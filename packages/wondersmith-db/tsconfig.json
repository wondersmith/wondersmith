{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": false,
        "declaration": true,
        "pretty": true,
        "strict": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
        "noEmitOnError": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    }
}
